{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Debug Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "name": "Python: Django Runserver (Local)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "DEBUG": "on"
            }
        }
    ]
}
